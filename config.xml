<?xml version='1.0' encoding='utf-8'?>
<widget id="it.elmariachistudios.reforganizerui" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RefOrganizerApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <access origin="*://*.googleapis.com/*" subdomains="true" />
    <access origin="*://*.gstatic.com/*" subdomains="true" />
    <access origin="*://*.google.com/*" subdomains="true" />
    <access origin="*://*.googleusercontent.com/*" subdomains="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <platform name="android">
        <!-- splash screen landscape -->
        <splash src="platforms/android/res/drawable-land-hdpi/landhdpi.png" density="land-hdpi"/>
        <splash src="platforms/android/res/drawable-land-ldpi/landldpi.png" density="land-ldpi"/>
        <splash src="platforms/android/res/drawable-land-mdpi/landmdpi.png" density="land-mdpi"/>
        <splash src="platforms/android/res/drawable-land-xhdpi/landxhdpi.png" density="land-xhdpi"/>
        <!-- splash screen portrait -->
        <splash src="platforms/android/res/drawable-port-hdpi/porthdpi.png" density="port-hdpi"/>
        <splash src="platforms/android/res/drawable-port-ldpi/portldpi.png" density="port-ldpi"/>
        <splash src="platforms/android/res/drawable-port-mdpi/portmdpi.png" density="port-mdpi"/>
        <splash src="platforms/android/res/drawable-port-xhdpi/portxhdpi.png" density="port-xhdpi"/>
        <!-- icon -->
    	<icon src="platforms/android/res/drawable/reforg.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
